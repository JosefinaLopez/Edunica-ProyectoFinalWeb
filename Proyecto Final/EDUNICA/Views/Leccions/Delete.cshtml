@model EDUNICA.Models.Leccion

@{
    ViewBag.Title = "Delete";
}

<style>
    #cdelete {
        align-items: center;
        text-align: center;
        padding: 20px;
    }

    .footer {
        position: relative;
        top: 10.7rem;
    }

    .containerxd {
        display: flex;
        justify-content: center;
        position: relative;
        top: 5rem;
    }

    .nose:hover {
        background-color: red;
    }
</style>
<div class="containerxd">
    <div class="card" id="cdelete">
        <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
        </svg>
        <h2>Eliminar</h2>
        <hr />
        <div class="card-body">
            <h3>¿Está Seguro de Querer Eliminar La Leccion @Model.NombreLeccion?</h3>
            <p>Esta Acción no se puede deshacer</p>
        </div>
        <div class="container">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="opti">
                    <input type="submit" value="Eliminar" class="nose" />
                    @Html.ActionLink("Volver a Inicio", "Index")
                </div>
            }
        </div>
    </div>
</div>
