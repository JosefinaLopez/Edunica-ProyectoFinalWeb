@model EDUNICA.Models.Leccion

@{
    ViewBag.Title = "Details";
}

<style>
    .contenedor, .card-img{
        width:100%;
    }
    .card-img {
        width: 100%;
        height: 60vh;
        background-color: #00008b96;
        background-image: url( @Model.Img );
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        filter: blur(23px);
    }
    .img {
        width: 300px;
        border-radius: 5%;
        position: relative;
        z-index: 9999;
        left: 33rem;
        bottom: 18rem;
    }
    .let {
        letter-spacing:0.2em;
        z-index: 999;
        position: relative;
        color: black;
        font-size: xx-large;
        left: 54rem;
        top:1rem;
    }
</style>
<div class="contenedor">
    <span class="let">@Model.Curso.NombreCurso</span>
    <div class="card-img">
    </div>
    <img src="@Model.Img" alt="Img" class="img" />
    <div style="text-align:center; position:relative; bottom:16rem;">
        <ul style="list-style:none;">
            <li><h1>@Model.NombreLeccion</h1></li>
            <li><p>@Model.Descripcion</p></li>
            <li>Progreso: @Model.Progreso.Cantidad %</li>
        </ul>
    </div>
</div>
@if (User.IsInRole("admin") && User.IsInRole("profesor"))
{
    <p class="opti">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id })
        @Html.ActionLink("Volver", "Index", new { id = Model.CursoId })
    </p>
}
